                                            <Label Text="Wind Speed" TextColor="Yellow"/>
                                            <Label Text="{Binding WindSpeed}" TextColor="White"/>
                                        </StackLayout>
                                        <StackLayout>
                                            <Label Text="{Binding Icon}" TextColor="Yellow"/>

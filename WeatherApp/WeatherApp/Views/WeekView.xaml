                      ItemsSource="{Binding WeatherForWeek}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal" BackgroundColor="Black" Padding="20" Margin="2">
                                        <StackLayout Orientation="Vertical">
                                            <Label Text=": טמפרטורה מינימלית" TextColor="Yellow"/>
                                            <Label Text="{Binding TemperatureLow}" TextColor="White" />
                                        </StackLayout>

                                        <Label Text=": טמפרטורה מקסימלית" TextColor="Yellow"/>
                                        <Label Text="{Binding TemperatureHigh}" TextColor="White"/>
                                        <Label Text=": מהירות הרוח" TextColor="Yellow"/>

                                        <Label Text="{Binding Humidity}" TextColor="White"/>

                                        <Label Text=": סיכום" TextColor="Yellow"/>
                                        <Label Text="{Binding Summary}" TextColor="White"/>
                                        <Label Text="{Binding Time}" TextColor="White"/>


                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <StackLayout>
                    <Button Text="חזור אחורה"
                          Command="{Binding BindingContext.ShowTempCommand, Source={x:Reference CitiesListView}}}"

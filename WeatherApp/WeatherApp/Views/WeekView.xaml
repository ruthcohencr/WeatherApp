                                        </StackLayout>
                                        <StackLayout>
                                            <Label Text="%Humidity" TextColor="Yellow"/>
                                            <Label Text="{Binding Humidity}" TextColor="White"/>
                                        </StackLayout>

                                        <StackLayout>
                                            <Label Text="Summery" TextColor="Yellow"/>
                                            <Label Text="{Binding Summary}" TextColor="White"/>
                                        </StackLayout>


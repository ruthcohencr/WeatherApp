                <StackLayout>
                    <Label Text="{Binding DayOfWeek}" TextColor="White"/>
                    <ListView BackgroundColor="White"     
                  
                      x:Name="weatherForWeek"
                      ItemsSource="{Binding WeatherForWeek}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal" BackgroundColor="Black" Padding="20" Margin="2">
                                        <StackLayout>
                                            <Label Text="Day" TextColor="Yellow" />
                                            <Label Text="{Binding NameOfDay}" TextColor="White"/>

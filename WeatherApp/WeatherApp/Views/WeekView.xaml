                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <StackLayout>
                    <Button Text="Go Back"
                            Command="{Binding BindingContext.GoBackCommand, Source={x:Reference weatherForWeek}}}"
                            CommandParameter="{Binding .}"
                            HorizontalOptions="Fill"/>
                </StackLayout>
